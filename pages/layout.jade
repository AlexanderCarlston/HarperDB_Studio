    script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body
    block link
      -var selected  = 'Main';

    -var menu = { 'Main': '/main', 'Explore': '/explore', 'Schema': '/schema', 'Security': '/security', 'Health': '/health', 'Logs': '/logs', 'Help': '/help'};  
    // Side Navbar
    nav.side-navbar
      .side-navbar-wrapper
        // Sidebar Header
        .sidenav-header.d-flex.align-items-left.justify-content-left
          // User Info
          .sidenav-header-inner.text-left
            h2.h5
              img(src='../img/harper.png', width='27', height='27')
              | HarperDB
          // Small Brand information, appears on minimized sidebar
          .sidenav-header-logo
            a.brand-small.text-center(href='index.html')
              img(src='../img/harper.png', width='37', height='37')
        // Sidebar Navigation Menus
        .main-menu
          ul#side-main-menu.side-menu.list-unstyled
             each val, key in menu
              if selected === key
                li.active
                 a(href=val, title=key)= key
              else
                li
                  a(href=val, title=key)= key
    .page
      // navbar
      header.header
        nav.navbar
          .container-fluid
            .navbar-holder.d-flex.align-items-center.justify-content-between
              .navbar-header
                a#toggle-btn.menu-btn(href='#')
                  i.icon-bars  
                a.navbar-brand(href='index.html')
                  .brand-text.d-none.d-md-inline-block
                    span Hello_HDBlms 
              ul.nav-menu.list-unstyled.d-flex.flex-md-row.align-items-md-center
                li.nav-item.dropdown
                  a#notifications.nav-link(data-target='#', data-toggle='dropdown', href='#', aria-expanded='false', aria-haspopup='true', rel='nofollow')
                    | NOTTIFICATIONS
                    span.badge.badge-warning 12
                  ul.dropdown-menu(aria-labelledby='notifications')
                    li
                      a.dropdown-item(href='#', rel='nofollow')
                        .notification.d-flex.justify-content-between
                          .notification-content
                            i.fa.fa-envelope
                            | You have 6 new messages
                          .notification-time
                            small 4 minutes ago
                    li
                      a.dropdown-item(href='#', rel='nofollow')
                        .notification.d-flex.justify-content-between
                          .notification-content
                            i.fa.fa-twitter
                            | You have 2 followers
                          .notification-time
                            small 4 minutes ago
                    li
                      a.dropdown-item(href='#', rel='nofollow')
                        .notification.d-flex.justify-content-between
                          .notification-content
                            i.fa.fa-upload
                            | Server Rebooted
                          .notification-time
                            small 4 minutes ago
                    li
                      a.dropdown-item(href='#', rel='nofollow')
                        .notification.d-flex.justify-content-between
                          .notification-content
                            i.fa.fa-twitter
                            | You have 2 followers
                          .notification-time
                            small 10 minutes ago
                    li
                      a.dropdown-item.all-notifications.text-center(href='#', rel='nofollow')
                        strong
                          i.fa.fa-bell
                          | view all notifications
                li.nav-item
                  a.nav-link.logout(href='./logout')
                    | LOGOUT
      // Counts Section
      block content    
      footer.main-footer
        .container-fluid
          .row
            .col-sm-6
              p HarperDB Studio Â© 2018
