extends ./layout

block link
    -var selected = 'Security';
block content
    script(src="../../scripts/add_user.js")
    style.
        .iaddprofile {
            display: none;
        }
        .iprofile {
            display: block;
        }
        .addprofileparent:hover .iaddprofile {
            display: block;
        }
        .addprofileparent:hover .iprofile {
            display: none;
        }
    // Breadcrumb
    .breadcrumb-holder
        .container-fluid
            ul.breadcrumb
                li.breadcrumb-item
                    a(href='/security') Security Home
                li.breadcrumb-item.active Add User
    // Counts Section
    .pagebox
        section.dashboard-counts
            header
                .boxdisplay.largetitle
                    | Security                          
                    a.btn.btn-main.dropdown-toggle.minwidthcombobox.pull-right(href='sqlsearchchart.html') SQL Search
            .container-fluid
                .largetitle.pull-left
                    a.btn.btn-main.dropdown-toggle.minwidthcombobox.btn-main-active(href='/security/add_user') Add User
                    &nbsp   
                    a#ad.btn.btn-main.dropdown-toggle.minwidthcombobox(href='/security/add_role') Add Role
                .wrapper.count-title.d-flex.pull-right
                    i.fa.fa-search(aria-hidden='true')
                    .name.ml-3
                        input#searchUser(type='text')
            .clear
                .boxdisplay
                    .pull-left
                        form#addUserForm(method="post", action="/security/add_user")
                            .boxdisplay-6
                                .addprofileparent.pull-left.mr-3
                                    button.btn.btn-mainadd.iaddprofile(data-toggle='dropdown', type='button', aria-expanded='false', aria-haspopup='true')
                                        i.fa.fa-plus(aria-hidden='true')
                                    span.iprofile
                                        i.fa.fa-user-circle.usericon
                                input.mr-1.pl-1(name="username", type='text', placeholder='username', required)
                                input.mr-1.pl-1(name="password", type='password', placeholder='password', required)
                                select#selectRole.mr-1.pl-1(name="role", placeholder='role', required)
                                label.mr-3(style='display:inline-block')
                                    input#test(name="active", type='checkbox', checked='check')
                                    | Active
                                button.btn.btn-mainadd.width100(type='submit', aria-expanded='false', aria-haspopup='true')
                                    | Add
        .dashboard-counts.clear.pt-3
            .container-fluid
                .row
                    .col-md-12
                        table#AllUserTable.table.table-striped
                            thead
                                tr
                                    th(scope='col')
                                    th(scope='col') Username
                                    th(scope='col') Role
                                    th(scope='col') Active
                                    th(scope='col') Failed Login Attempts
                                    th(scope='col') 
                            tbody

        #addtableModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalCenterTitle', aria-hidden='true')
            .modal-dialog.modal-dialog-centered(role='document', style="max-width: 350px")
                .modal-content
                    .modal-header
                        #exampleModalLongTitle.modal-title.text-white(style="margin-left: 60px") Confirm Delete ?
                        button.close(type='button', data-dismiss='modal', aria-label='Close')
                            i.fa.fa-times.text-red
                    .modal-body.text-white
                        
                    .modal-footer
                        .col-md-4(style="margin: 0 auto;")
                            button.btn.btn-danger(type='button', data-toggle='dropdown', data-dismiss='modal', aria-haspopup='true', aria-expanded='false')
                                | Delete
                        .col-md-4(style="margin: 0 auto;")
                            button.btn.btn-main(type='button', data-toggle='dropdown', data-dismiss='modal', aria-haspopup='true', aria-expanded='false')
                                | Cancel

