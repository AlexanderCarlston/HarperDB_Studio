extends ./layout

block link
  -var selected = 'Explore';
block content
  input#schemas(type="hidden", name="schemas" value="#{schemas}")
  script(src="../../scripts/filter_search.js")
  // Breadcrumb
  .breadcrumb-holder
    .container-fluid
      ul.breadcrumb
        li.breadcrumb-item
          a(href='/explore') Explore Home
        li.breadcrumb-item.active Filter Search 
  // Counts Section
  .pagebox
    section.dashboard-counts
      header
        .boxdisplay.largetitle
          | Filter Search
          a.btn.btn-main.dropdown-toggle.minwidthcombobox.pull-right(href='/explore/sql_search') SQL Search
      .container-fluid
        .row
          // Count item widget
          .col-md-12
            .btn-group(style='float:left')
              select#selectSchema(name="selectedSchema")
                option.dropdown-item(value="") select Schema
            .btn-group(style='float:left; margin-left:10px;')
              select#selectTable(name="selectedTable")
                option.dropdown-item(value="") Select Table

      .container-fluid.pt-5
        #firstFilterColumn
          .row.filterrow
            // Count item widget
            .col-md-12
              .btn-group.minfiltertitle(style='float:left')
                .boxdisplay-6 FILTER
              .btn-group(style='float:left; margin-left:10px;')
                select#selectAttribute(name="selectedAttribute")
                  option(value="") Select Column
              .btn-group(style='float:left; margin-left:10px;')
                select#selectAttribute(name="selectedAttribute")
                  option(value="=") =
                  option(value="<") 
                    | <
                  option(value=">") 
                    | >
                  option(value="LIKE") LIKE
                  option(value="IN") IN
              div
                input.form-control.minwidthtextbox(type='text', placeholder='Enter Value', style='float:left; margin-left:10px; max-width:200px; margin-right:5px;')
              .removeicon
                i.fa.fa-times.text-red
        #otherFilterColumn

        .row.filterrow
          // Count item widget
          .col-md-12
            button#AddFilterColumn.btn.btn-mainadd.pull-left(type='button', aria-haspopup='true', aria-expanded='false')
              i.fa.fa-plus(aria-hidden='true')
        .row.filterrow
          // Count item widget
          .col-md-12
            button#resetSqlBtn.btn.btn-main.minwidthcombobox.pull-right(type='button', aria-haspopup='true', aria-expanded='false') Reset
            button#searchSqlBtn.btn.btn-main.minwidthcombobox.pull-right(type='button', style='margin-right:10px;', aria-haspopup='true', aria-expanded='false') Search
        hr
    header#collapseResult
      .boxdisplay.largetitle
        | Results
        .pull-right
          i.fa.fa-sign-out
        .pull-right
          i.fa.fa-save( data-target='#saveModalCenter', data-toggle='modal', style='margin-right:10px;')
        .pull-right
          i.fa.fa-refresh(style='margin-right:10px;')
    .container-fluid
      .row
        .col-md-12
          table#resultTable.table.table-striped
    // Modal
    #saveModalCenter.modal.fade(role='dialog', aria-hidden='true', aria-labelledby='exampleModalCenterTitle', tabindex='-1')
      .modal-dialog.modal-dialog-centered(role='document')
        .modal-content
          form#favoriteForm
            .modal-header
              #exampleModalLongTitle.modal-title.text-white Save Search
              button.close(data-dismiss='modal', type='button', aria-label='Close')
                i.fa.fa-times.text-red
            .modal-body
              .row.filterrow.p-3
                // Count item widget
                .row.w-100
                  .col-md-4.wtitle
                    .boxdisplay-6.text-right Name
                  .col-md-8
                    input#favoriteName.form-control.minwidthtextbox(type='text', style='float:left; max-width:250px; margin-right:5px;' required)
                .row.w-100
                  .col-md-4.wtitle
                    .boxdisplay-6.text-right Live Resualts URL
                  .col-md-8
                    input.form-control.minwidthtextbox#liveLinkSQL(type='text', style='float:left;  max-width:250px; margin-right:5px;' readonly)
                    button.btn.btn-main.pull-left(type='button', aria-expanded='false', aria-haspopup='true' onclick="copySqlLink()") Copy
                .row.w-100
                  .col-md-4.wtitle
                    .boxdisplay-6.text-right Notes
                  .col-md-8
                    input#favoriteNote.form-control.minwidthtextbox.w-100(type='text', style='float:left; margin-right:5px;')
            .modal-footer
              .col-md-12.text-center
                button.btn.btn-mainadd(type='submit', aria-expanded='false', aria-haspopup='true', style='min-width:150px; ')
                  | Save
