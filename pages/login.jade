doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(href='http://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900', rel='stylesheet', type='text/css')
        // Page title
        title HarperDB Studio
        // Vendor styles
        link(rel='stylesheet', href='vendor/fontawesome/css/font-awesome.css')
        link(rel='stylesheet', href='vendor/animate.css/animate.css')
        link(rel='stylesheet', href='vendor/bootstrap/css/bootstrap.css')
        // App styles
        link(rel='stylesheet', href='styles/pe-icons/pe-icon-7-stroke.css')
        link(rel='stylesheet', href='styles/pe-icons/helper.css')
        link(rel='stylesheet', href='styles/stroke-icons/style.css')
        link(rel='stylesheet', href='styles/style.css')
    body.blank

        // Wrapper
        .wrapper
            // Main content
            section.content
                .back-link

                .container-center.animated.slideInDown
                    .view-header
                        .header-icon
                            i.pe.page-header-icon.pe-7s-unlock
                        .header-title
                            img(src="images/white_300x100.png" style="width:200px; margin-top:-8px;")
                            #{error}

                    .panel.panel-filled
                        .panel-body
                            form#loginForm(action='/login', novalidate='' method='post')
                                input(type="hidden" id="ref" value="#{ref}" name="ref")
                                .form-group
                                    label.control-label(for='username') Username
                                    input#username.form-control(name='username' type='text',
                                    placeholder='example@gmail.com', title='Please enter you username', required='')

                                .form-group
                                    label.control-label(for='password') Password
                                    input#password.form-control(name='password' type='password'
                                    title='Please enter your password' placeholder='******'  required='')

                                .panel.panel-filled.panel-c-accent.panel-collapse
                                    .panel-heading
                                        .panel-tools
                                            a.panel-toggle
                                                i.fa.fa-chevron-down

                                        |                            Connection
                                    .panel-body(style='display: none;')
                                        .form-group
                                            label.control-label(for='endpoint_url') Endpoint URL
                                            input#endpoint_url.form-control(name='endpoint_url' type='ip',
                                            title='Please enter the ip or url HarperDB', value='localhost', placeholder='localhost', required='')
                                        .form-group
                                            label.control-label(for='endpoint_port') Endpoint Port
                                            input#endpoint_port.form-control(name='endpoint_port' type='text',
                                            title='Please enter the port for HarperDB',value='5299', placeholder='5299', required='')





                                div
                                    button(type="submit").btn.btn-accent Login
            // End main content
        // End wrapper
        // Vendor scripts
        script(src='vendor/pacejs/pace.min.js')
        script(src='vendor/jquery/dist/jquery.min.js')
        script(src='vendor/bootstrap/js/bootstrap.min.js')
        script(src='vendor/toastr/toastr.min.js')
        // App scripts
        script(src='scripts/luna.js')
        script.
            $(document).ready(function () {
                let errMsg = '#{error}';
                if(errMsg){
                    toastr.error(errMsg);

                }

            });

